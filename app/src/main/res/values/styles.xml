<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <!--Controls toolbar title color-->
        <item name="android:textColorPrimary">@color/primary_text</item>

        <!--Controls ToolBar icon colors-->
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="windowActionBar">false</item>

        <!--Set button color-->
        <item name="colorButtonNormal">@color/primary</item>

        <!--Set EditText cursor and underline-->
        <!--<item name="colorControlNormal">@color/primary</item>-->
        <item name="colorControlActivated">@color/primary</item>

        <!--Set drawer arrow style-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!--Overflow menu colors-->
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <!--Make contextual actionbar overlap toolbar-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/primary</item>


        <!--<item name="android:textColor">@color/primary_text</item>-->

        <!--Set Ripple color-->
        <!--<item name="colorControlHighlight">@color/ripple</item>-->

    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="CustomToolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>




</resources>
